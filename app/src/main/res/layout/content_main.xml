<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chun.calc.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="成本"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="底仓"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="总额" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/cost"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/bilge"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/total"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="单价"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="份额"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="市值" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/unit_price"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/share"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/value"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="估值"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="持有份额"
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="持有市值"
                android:textColor="@android:color/holo_purple" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/valuation"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/have_share"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_purple" />

            <EditText
                android:id="@+id/have_value"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_purple" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="涨幅"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="盈亏额"
                android:textColor="@android:color/holo_purple" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="买卖份额"
                android:textColor="@android:color/holo_purple" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/increase"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/profit"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_purple" />

            <EditText
                android:id="@+id/buy_share"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_purple" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第一行" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第二行" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第三行" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="保存的名字" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_save"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存" />
        </TableRow>


    </TableLayout>

</android.support.v4.widget.NestedScrollView>
