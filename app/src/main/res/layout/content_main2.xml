<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chun.calc.MainActivity2">

    <include
        android:id="@+id/titleNavLayout"
        layout="@layout/title_bar_item" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cost"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/low_position"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/total"
                android:textColor="@android:color/holo_green_dark" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/cost"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/low_position"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/total"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/net_value"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/share"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/value"
                android:textColor="@android:color/holo_green_dark" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/net_value"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/share"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/value"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/increase"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/profit"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/buy_share"
                android:textColor="@android:color/holo_green_dark" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/increase"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/profit"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/buy_share"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/T_net_value"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/T_share"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/T_value"
                android:textColor="@android:color/holo_green_dark" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/T_net_value"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/T_share"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

            <EditText
                android:id="@+id/T_value"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="0"
                android:textColor="@android:color/holo_green_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第一行" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第二行" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ac3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清除第三行" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="保存的名字" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_save"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存" />
        </TableRow>


    </TableLayout>

</LinearLayout>
